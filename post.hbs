{{!< default}}

{{#post}}
    <div class="post post-head">
        <h1 class="post-title">{{{title}}}</h1>
    </div>

    <div class="post post-body">
        {{content}}
        <div class="post post-foot">
            <div class="post-foot-right">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD/MM/YY'}}</time>
            </div>
            <div>
                {{#if tags}}{{tags separator=" "}}{{/if}}
            </div>
        </div>
    </div>
{{/post}}
